.topBanner{
  height: 360rpx;
  width: 100%;
}
.topBanner image{
  width: 100%;
  height: 100%;
}
.recycleTabBar{
  display: flex;
  height: 190rpx;
}
.tabBarItem{
  flex: 1;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.firstItem::after{
  display: block;
  content: '';
  border-left: 1rpx solid #e8e8e8;
  height: 100rpx;
  transform: translateX(30rpx);
}
.tabBarLeftItem{
  flex: 2.5;
}
.tabBarLeftItem .leftTop{
  font-size: 30rpx;
  color: #444;
}
.tabBarLeftItem .leftBottom{
  padding-top: 10rpx;
  font-size: 22rpx;
  color: #999;
}
.tabBarRightItem{
  flex: 1;
  display: flex;
  align-items: center;
}
.tabBarRightItem image{
  height: 112rpx;
  width: 112rpx;
}

.hotRecycle{
  background: #fff;
  margin-bottom: 20rpx;
}

.hotRecycleHead{
  height: 100rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #444;
}
.hotRecycleHead image{
  height: 28rpx;
  width: 24rpx;
  margin-left: 30rpx;
  margin-right: 16rpx;
}
.hotRecycleContent{
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  min-height: 800rpx;
}
.hotRecycleContentItem{
  width: 374rpx;
  height: 507rpx;
  border-left: 1rpx solid #e8e8e8;
  border-top: 1rpx solid #e8e8e8;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.hotRecycleContentItem:nth-child(odd){
  border-left: none;
}
.hotRecycleContentItem image{
  width: 268rpx;
  height: 268rpx;
}
.hotRecycleContentItem .mould{
  font-size: 30rpx;
  color: #333;
  margin-top: 45rpx;
  margin-bottom: 10rpx;
}
.hotRecycleContentItem .price{
  color: #999;
  font-size: 22rpx;
}
.hotRecycleContentItem .price text{
  color: #ff5000;
  font-size: 26rpx;
}

.hotRecycleFoot{
  padding: 40rpx 0;
}

.hotRecycleFoot .findMoreBtn{
  width: 80%;
  margin: 0 auto;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #999;
  background: #f5f5f5;
  text-align: center;
  border-radius: 15rpx;
}

/* showBlock */
.showBlock{
  background: #fff;
  text-align: center;
  margin-bottom: 20rpx;
}
.showBlockTop{
  font-size: 28rpx;
  color: #444;
  font-weight: bold;
  padding: 30rpx 0;
}

.showBlockBottom{
  display: flex;
  background: #fff;
  width: 100%;
  align-items: center;
  text-align: center; 
  padding-bottom: 40rpx;
}
.showListItem{
  flex: 1;
  position: relative;
}
.showListItem.mid{
  border-left: 1rpx solid #efeff4;
  border-right: 1rpx solid #efeff4;
}

.showListItem image{
  height: 70rpx;
  width: 60rpx;
}

.showListItem .itemContent{
  font-size: 26rpx;
  color: #666;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color:transparent;
} 