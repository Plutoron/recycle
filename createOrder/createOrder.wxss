.address{
  width: 90%;
  word-wrap: break-word;
}

.payWay,
.goodsList{
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.payWayTop,
.payWayDown,
.goodsListTop,
.goodsListDown{
  padding: 0 30rpx;
}

.payWayTop,
.goodsListTop{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 26rpx;
  color:#666;
  border-bottom: 1rpx solid #e8e8e8; 
}

.payWayDown{

}

/* 默认状态 */
.payWayDownItemTop{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e8e8e8;
}
.payWayDownItem:last-child .payWayDownItemTop{
  border-bottom: none;
}

.payWayDownItemTopleft,
.payWayDownItemTopRight
{
  height: 100rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333;
}
.payWayDownItemTopleft image{
  width: 42rpx;
  height: 42rpx;
  margin-right: 24rpx;
}
.payWayDownItemTopRight image{
  width: 30rpx;
  height: 30rpx;
}
.payWayDownItemDown{
  position: relative;
}
.downInput{
  display: none;
  height: 84rpx;
  background: #ecf0f6;
  font-size: 28rpx;
  color: #999;
  padding: 0 30rpx;
}
.downInput::before{
  display: inline-block;
  content: '';
  width: 0;
  height: 0;
  border-left: 15rpx solid transparent;
  border-right: 15rpx solid transparent;
  border-bottom: 15rpx solid #ecf0f6;
  position: absolute;
  top: -13rpx;
  left: 30rpx;
}
/* 选中状态 */
.payWayDownItem.selected .payWayDownItemTop{
  border-bottom: none;
}
.payWayDownItem.selected .downInput{
  display: block;
}

.goodsListDown{
  display: flex;
  height: 255rpx;
}

.goodsListDown:not(:last-child){
  border-bottom: 1rpx solid #e8e8e8;
}

.goodsListDownLeft{
  flex: 1;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.goodsListDownLeft image{
  width: 176rpx;
  height: 176rpx;
}

.goodsListDownRight{
  flex: 25;
  display: flex;
  justify-content: center;
  flex-direction: column;
  font-size: 28rpx;
  color: #333;
}

.goodsListDownRight .midText{
  margin: 10rpx 0 15rpx;
}
.goodsListDownRight .priceView{
  height: 70rpx;
  border-top: 1rpx solid #e8e8e8; 
  border-bottom: 1rpx solid #e8e8e8; 
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.rmb{
  padding-top: 4rpx;
  color: #ff5000;
  margin-right: 4rpx;
  margin-left: 10rpx;
}
.num{
  font-size: 36rpx;
  color: #ff5000;
}









