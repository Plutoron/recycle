/* resultPage.wxss */
.deviceInfoBlock{
  height: 260rpx;
  display: flex;
  background: #fff;
  border-top: 1rpx solid #e8e8e8; 
  margin-bottom: 20rpx;
}
.deviceInfoLeft{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.deviceInfoLeft image{
  width: 180rpx;
  height: 180rpx;
  margin: 0 30rpx;
}

.deviceInfoRight{
  flex: 10;
  height: 100%;
}

.deviceInfoRight{
  flex: 10;
  height: 100%;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  flex-direction: column;
}

.deviceInfoRight .device{
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}

.deviceInfoRight .mid{
  font-size: 22rpx;
  color: #999;
  margin-top: 25rpx;
}

.deviceInfoRight .price{
  font-size: 76rpx;
  color: #ff5000;
  display:flex;  
  align-items: center;
}

.deviceInfoRight .price .rmb{
  display: flex;
  align-items: flex-end;
  height: 60rpx;
}
.deviceInfoRight .price .rmb text{
  font-size: 28rpx;
}

.deviceInfoRight .price .priceNum{
  font-size: 76rpx;
  display: flex;
  height: 100%;
  align-items: flex-end;
}

.selectInfoBlock{
  background: #fff;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}

.selectInfoTop{
  height: 90rpx;
  border-bottom: 1rpx solid #e8e8e8;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.selectInfoTop .left,
.selectInfoTop .right{
  flex: 1;
}

.selectInfoTop .left{
  display: flex;
  align-items: center;
  color: #444;
}
.selectInfoTop .left image{
  height: 28rpx;
  width: 24rpx;
  margin-right: 14rpx;
  transform: translateY(3rpx);  
}
.selectInfoTop .right{
  text-align: right;
  color: #009cff;
}

.selectInfoBottom{
  padding: 10rpx 30rpx 30rpx;
}

.selectInfoItem{
  min-height: 40rpx;
  display: flex;
  align-items: flex-start;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.selectInfoItemLeft{
  flex: 1;
  color: #999;
  display: flex;
  justify-content: flex-start;
}
.selectInfoItemRight{
  flex: 2.85;
  color: #333;
  display: flex;
  justify-content: flex-start;
  padding-left: 10rpx;
}

.promiseBlock{
  background: #fff;
  margin-bottom: 20rpx;
}

.promiseTop{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 90rpx;
  border-bottom: 1rpx solid #e8e8e8;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #444;
  padding: 0 30rpx;
}

.promiseTop image{
  height: 28rpx;
  width: 24rpx;
  margin-right: 14rpx;
  transform: translateY(-1rpx);
}

.promiseBottom{
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}
.promiseBottomItem{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 26rpx;
  color: #666;
}
.promiseBottomItem image{
  height: 82rpx;
  width: 70rpx;
  margin-bottom: 24rpx;
}

.bottomBlock,
.placeHolderBlock{
  height: 100rpx;
}

.bottomBlock{
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  color: #333;
  display: flex;
  align-items: center;
  font-size: 32rpx;
}
.bottomBlock .left{
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  text-align: center;
  border-right: 1rpx solid #e8e8e8;
  padding-top:8rpx; 
}

.bottomBlock .left .leftTop{
  display: flex;
  justify-content: center;
  position: relative;
}

.bottomBlock .left .leftTop text{
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 24rpx;
  width: 24rpx;
  font-size: 18rpx;
  right: 25%;
  top: -10rpx;
  border: 1rpx solid #ff5000; 
  border-radius: 50%; 
  color: #ff5000;
  text-align: center;
}

.bottomBlock .left .leftTop image{
  height: 46rpx;
  width: 50rpx;
}


.bottomBlock .left .leftBottom{
  font-size: 20rpx;
}

.bottomBlock .mid,
.bottomBlock .right{
  flex: 1.25;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.bottomBlock .right{
  background: #ff5000;
  color: #fff;
}









